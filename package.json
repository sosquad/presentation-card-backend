{
  "name": "efx-safe-api",
  "version": "0.0.1",
  "description": "SAFE API",
  "author": "23people",
  "main": "index.js",
  "scripts": {
    "copy": "cpx -C \"{config,controllers,lib,models,services}/**/*\" build | cpx \"./*.{js,json}\" build",
    "lint": "eslint .",
    "test": "mocha",
    "start": "node index.js",
    "build": "npm run test && npm run copy",
    "all": "npm run build && npm run test"
  },
  "dependencies": {
    "@23people/moonbase-common-utils": "^1.1.0",
    "@23people/moonbase-express": "^1.6.0",
    "@23people/moonbase-mongo-logger": "^1.1.0",
    "@23people/moonbase-mongoose-plugins": "^1.1.0",
    "@23people/moonbase-mongoose-utils": "^1.4.0",
    "@23people/moonbase-validators-formatters": "^1.7.0",
    "circular-json": "^0.5.9",
    "construx": "^1.0.0",
    "construx-copier": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "jose": "^1.27.1",
    "jsonwebtoken": "^8.5.1",
    "kraken-js": "^2.3.0",
    "moment": "^2.24.0",
    "mongoose": "^5.9.9"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "express-swagger-generator": "^1.1.17",
    "husky": "^4.2.5",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "airbnb",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "none",
          "arrowParens": "avoid",
          "printWidth": 100,
          "semi": true
        }
      ],
      "no-const-assign": 2,
      "prefer-const": 2,
      "no-constant-condition": 2,
      "no-var": 2,
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-magic-numbers": [
        "error",
        {
          "enforceConst": true,
          "ignore": [
            -1,
            0,
            1
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "build",
    "node_modules"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run build"
    }
  }
}
